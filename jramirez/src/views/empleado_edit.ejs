<% include partials/_header %>


<div class="container mt-5">
    <div class="row">
      <div class="col-md-5 offset-md-3 card">
        <div class="card-body">
            <h2>Información de Empleado</h1>
          <form action="/update/<%= data.id %>" method="POST">
            <div class="form-group"> 
                <label for="cedula"> Cédula</label>
                <input type="text" value="<%= data.cedula%>" placeholder="Cédula" class="form-control mb-1" disabled>
              </div>
            <div class="form-group">
                <label for="nombre"> Nombre</label>

              <input type="text"  value="<%= data.nombre%>" placeholder="Nombre" class="form-control mb-1" autofocus disabled>
            </div>
            <div class="form-group">
            <label for="apellido"> Apellido</label>
              <input type="text"  value="<%= data.apellido%>" placeholder="Apellido" class="form-control mb-1" autofocus disabled>
            </div>
            <div class="form-group">
                <label for="sueldo"> Sueldo</label>
                <input type="text" name="sueldo" value="<%= data.sueldo%>" placeholder="Cédula" class="form-control mb-1" autofocus>
              </div>
              <div class="form-group">
                <label for="monto"> Prestamo</label>
                <input type="text" name="monto" value="<%= data.monto%>" placeholder="Prestamo" class="form-control mb-1" autofocus>
              </div>
              <div class="form-group">
                <label for="numeroDeHoras">Número Horas Extras</label>
                <input type="text" name="numeroDeHoras" value="<%= data.numeroDeHoras%>" placeholder="Número Horas Extras" class="form-control mb-1" autofocus>
              </div>
            
            <button type="submit" class="btn btn-primary">
              Guardar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  

<% include partials/_footer %>
